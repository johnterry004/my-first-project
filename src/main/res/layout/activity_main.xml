<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:text="0"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_tv"
        android:layout_margin="16dp"/>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/result_tv"
    android:text="0"
    android:textSize="64dp"
    android:textAlignment="textEnd"
    android:textColor="@color/black"
    android:layout_above="@+id/buttons_layout"
    android:layout_margin="16dp"
    />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentBottom="true"
      android:background="#9A3FF8D3"
      android:paddingVertical="16dp"
      android:id="@+id/buttons_layout">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:layout_width="85dp"
              android:layout_height="72dp"
              android:textSize="20dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_delet"
              android:layout_margin="12dp"
              android:backgroundTint="#EA0707"
              android:text="DEL"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Openbracket"
              android:layout_margin="12dp"
              android:backgroundTint="#D0000000"
              android:text="("/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Closebracket"
              android:layout_margin="12dp"
              android:backgroundTint="#D0000000"
              android:text=")"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Divide"
              android:layout_margin="12dp"
              android:text="/"/>




      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_7"
              android:layout_margin="12dp"
              android:text="7"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_8"
              android:layout_margin="12dp"
              android:text="8"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_9"
              android:layout_margin="12dp"
              android:text="9"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Multiply"
              android:layout_margin="12dp"
              android:backgroundTint="#D0F4CC7B"
              android:text="*"/>




      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_4"
              android:layout_margin="12dp"
              android:text="4"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_5"
              android:layout_margin="12dp"
              android:text="5"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_6"
              android:layout_margin="12dp"
              android:text="6"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Addition"
              android:layout_margin="12dp"
              android:backgroundTint="#F3880000"
              android:text="+"/>




      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_1"
              android:layout_margin="12dp"
              android:text="1"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_2"
              android:layout_margin="12dp"
              android:text="2"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_3"
              android:layout_margin="12dp"
              android:text="3"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Minus"
              android:layout_margin="12dp"
              android:backgroundTint="#405FFD"
              android:text="-"/>




      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

          <com.google.android.material.button.MaterialButton
              android:layout_width="82dp"
              android:layout_height="72dp"
              android:textSize="25dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_ac"
              android:layout_margin="12dp"
              android:backgroundTint="#EA0707"
              android:text="AC"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_0"
              android:layout_margin="12dp"
              android:text="0"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Dot"
              android:layout_margin="12dp"
              android:text="."/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="72dp"
              android:layout_height="72dp"
              android:textSize="42dp"
              app:cornerRadius="38dp"
              android:textColor="@color/white"
              android:id="@+id/button_Equals"
              android:layout_margin="12dp"
              android:backgroundTint="#D0FF33BB"
              android:text="="/>




      </LinearLayout>




  </LinearLayout>
</RelativeLayout>